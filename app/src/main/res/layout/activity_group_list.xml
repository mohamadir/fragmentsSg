<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.GroupListActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout">
    <!--android:padding="10dp">-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/GroupListActivity_SignInBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/result_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:textSize="15sp"
        android:text="Sign in"
        android:textColor="@color/orange"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button27"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:background="@drawable/logo2" />
    <Button
        android:id="@+id/menuBt"
        android:layout_width="30dp"
        android:layout_marginLeft="4dp"
        android:layout_height="20dp"
        android:background="@drawable/menu"
        android:layout_alignTop="@+id/button27"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="2"
>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/groupListActivity_invitesFilterTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="My Groups"
                android:typeface="sans"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="@android:color/background_dark"
                 />

            <Button
                android:id="@+id/groupsButton"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:background="@drawable/gradiant_color"
                android:text="Button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/groupListActivity_myGroupsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Invitations"
                android:typeface="sans"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="@android:color/background_dark"
                 />

            <Button
                android:id="@+id/invitationsButton"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/gradiant_color"
                android:text="Button" />

        </LinearLayout>

    </LinearLayout>

    <com.twotoasters.jazzylistview.JazzyListView
        android:id="@+id/grouoLv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:dividerHeight="5dp"
        android:scrollingCache="true"
        app:effect="reverse_fly"
        app:max_velocity="0"
        app:only_animate_fling="false"
        app:only_animate_new_items="false" />
    <include
        android:id="@+id/loadItemsLayout_recyclerView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/progress_layout"
        android:visibility="gone" />

</RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        app:headerLayout="@layout/navigate_header"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>